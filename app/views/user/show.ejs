<% var title = user.username +' | Express' %>
<% include ../layout_header %>
    <h1><%= title %></h1>
    <p>Name : <%= user.username %></p>
    <p>Password: <%= user.password %></p>
    <a href="/<%= user.username %>/edit">
       <button  class="pure-button pure-button-primary f-left">Edit</button>
    </a>
    <form method="post" action="/<%= user.username  %>" enctype="application/x-www-form-urlencoded">
      <input type="hidden" name="_method" value="delete">
      <button type="submit" class="pure-button">Delete</button>
    </form>
<% include ../layout_footer %>
